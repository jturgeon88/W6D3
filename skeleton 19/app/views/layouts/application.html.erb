<!DOCTYPE html>
<html>
  <head>
    <title>AjaxTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One" rel="stylesheet">
  </head>


  <body>
    <header>
    <nav class="header-nav">
      <h1 class="logo"><tiny>AJAX</tiny>Twitter</h1>

      <ul class="header-links">
        <li><%= link_to "Feed", feed_url %></li>
        <li><%= link_to "User Search", search_users_url %></li>
        <% if current_user %>
          <form class="button-form" action="/session" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input
              type="hidden"
              name="authenticity_token"
              value="<%= form_authenticity_token %>">

            <input type="submit" value="Logout!">
          </form>
        <% else %>
          <li><a href="<%= new_session_url %>">Login</a></li>
          <li><a href="<%= new_user_url %>">Signup</a></li>
        <% end %>
      </ul>

    </nav>
    </header>

    
    <%= yield %>
  </body>
</html>
